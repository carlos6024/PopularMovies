<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <ImageView
        android:layout_width="180dp"
        android:layout_height="180dp"
        android:scaleType="fitXY"
        android:layout_marginTop="30dp"
        android:id="@+id/fragment_movie_details_Poster"
        android:layout_marginLeft="10dp"/>

<LinearLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_toRightOf="@id/fragment_movie_details_Poster"
    android:layout_marginTop="50dp"
    android:layout_marginLeft="20dp">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Test"
        android:textStyle="bold|"
        android:textSize="16sp"
        android:id="@+id/fragment_movie_details_title"

        />


    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Hello1"
            android:textSize="12sp"
            android:id="@+id/fragment_movie_details_popularVote"
            />


    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="hello2"
            android:textSize="12sp"
            android:id="@+id/fragment_movie_details_ratingVote"/>

</LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/fragment_movie_details_Poster"
        android:text="Summary:"
        android:layout_alignStart="@+id/fragment_movie_details_Poster"
        android:layout_alignLeft="@+id/fragment_movie_details_Poster"
        android:id="@+id/fragment_summary_text"
        android:textSize="24sp"
        android:textStyle="italic"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/fragment_summary_text"
        android:text="fddsal;fjdksjfldsjflsdf"
        android:layout_alignStart="@+id/fragment_movie_details_Poster"
        android:layout_alignLeft="@+id/fragment_movie_details_Poster"
        android:id="@+id/fragment_movie_summary"
        />

    </RelativeLayout>
